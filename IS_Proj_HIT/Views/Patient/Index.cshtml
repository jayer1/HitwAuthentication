@using IS_Proj_HIT.Models.ViewModels
@model ListPatientsViewModel


<div class="bg-primary m-1 p-1 text-white"><h4>Patient Listing</h4></div>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <ul class="nav navbar-nav">
            <li><a class="nav-link text-dark" asp-area="" asp-controller="Patient" asp-action="AddPatient">Add Patient</a></li>
            <li><a class="nav-link text-dark" asp-area="" asp-controller="Patient" asp-action="AddEmployment">Add Employment</a></li>
        </ul>
    </div>
</nav>


    <table class="table">
        <thead>
            <tr>
                <th scope="col">MRN</th>
                <th scope="col">First Name</th>
                <th scope="col">Middle Intial</th>
                <th scope="col">Last Name</th>
                <th scope="col">Date of Birth</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Model.Patients)
            {
                <tr>

                    <td>@patient.Mrn</td>
                    <td>@patient.FirstName</td>
                    <td>@patient.MiddleName</td>
                    <td>@patient.LastName</td>
                    <td>@patient.Dob.ToShortDateString()</td>
                    <td><a asp-action="Edit" asp-route-id="@patient.Mrn">Edit</a></td>
                    <td><a asp-action="DeletePatient" asp-route-id="@patient.Mrn">Delete</a></td>
                </tr>
            }
                
        </tbody>
    </table>
    <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn" page-class-normal="btn-secondary" page-class-selected="btn-primary" class="btn-group" pull-right m-1></div>


<hr />
